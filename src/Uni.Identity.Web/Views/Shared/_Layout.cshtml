@using IdentityServer4.Extensions
@{
    string userName = null;
    var authenticated = User.IsAuthenticated() && !true.Equals(ViewData["signed-out"]);
    if (authenticated)
    {
        userName = User.GetDisplayName();
    }
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@($"Сервис аутентификации - {ViewData["Title"]}".Trim(' ', '-'))</title>
    <link rel="icon" type="image/x-icon" href="~/static/favicon.ico" asp-append-version="true"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/static/favicon.ico" asp-append-version="true"/>
    <link rel="stylesheet" href="~/backoffice.min.css" asp-append-version="true"/>
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/static/logo.png" class="d-block" alt="Logo" asp-append-version="true">
        </a>
        @if (authenticated)
        {
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Показать меню">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                <div class="navbar-nav"></div>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a href="#" class="inactive-link nav-link">@userName</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Logout" asp-controller="Account" class="nav-link">Выйти</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
<script src="~/vendor.min.js" asp-append-version="true"></script>
<script src="~/backoffice.min.js" asp-append-version="true"></script>
@RenderSection("scripts", false)
</body>
</html>