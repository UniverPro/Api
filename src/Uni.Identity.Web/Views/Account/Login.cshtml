@model Uni.Identity.Web.ViewModels.Account.Login.LoginViewModel
@{
    ViewData["Title"] = "Аутентификация";
}
<div class="row">
    <div class="col">
        <h2 class="font-weight-light">@ViewData["Title"]</h2>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="card-text">
                    <form asp-route="Login" method="post">
                        <partial model="@Model" name="_ValidationSummary" view-data="@ViewData"/>
                        <input type="hidden" asp-for="ReturnUrl"/>
                        <div class="form-group">
                            <input asp-for="Username" class="form-control" cd-placeholder-for="Username" autocomplete="off" autofocus>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" cd-placeholder-for="Password" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        @if (Model.AllowRememberLogin)
                        {
                            <div class="form-group">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe">
                                    <strong>Запомнить</strong>
                                </label>
                            </div>
                        }
                        <div class="form-group">
                            <button class="btn btn-primary" name="button" value="login">Войти</button>
                            <button class="btn" name="button" value="cancel">Отмена</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>