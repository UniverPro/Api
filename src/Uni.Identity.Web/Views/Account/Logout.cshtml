@model Uni.Identity.Web.ViewModels.Account.Logout.LogoutViewModel
@{
    ViewData["Title"] = "Подтверждение действия";
}

<div class="row">
    <div class="col">
        <h2 class="font-weight-light">@ViewData["Title"]</h2>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                Необходимо подтвердить выход из системы
            </div>
            <div class="card-body">
                <div class="card-text">
                    <form asp-action="Logout">
                        <input type="hidden" name="logoutId" value="@Model.LogoutId"/>
                        <button class="btn btn-primary">Подтвердить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>